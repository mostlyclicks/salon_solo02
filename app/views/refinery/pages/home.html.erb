<style>
  .blue-brdr {border:1px solid blue;}
  .red-brdr {border:1px solid red;}
  .green-brdr {border:1px solid blue;}
</style>
<div id="intro">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-sm-3 col-xs-5 text-center">
        <%= image_tag 'salonsolo5b-2.png', id: 'logo', class: 'img-responsive' %>
      </div>


      <% @image_array = [] %>
      <% @page.images.each_with_index do |image, index| %>
        <% @image_array << {image: image, index: index} %>
      <% end %>

      <% @hero_image = @image_array.sample %>
      <% @hero_image[:image] %>
  
      <div class="col-md-8 col-sm-6">
        <% @page.images.each_with_index do |image, index| %>
        <%#= bg_color = raw @page.caption_for_image_index(index) %>

        <% if @hero_image[:index]  == 0 %>
          <% bg_style = 'rgba(132,130,126, 1)' %>
          <% @phone_style = 'rgba(132,130,126, .9)' %>
        <% elsif @hero_image[:index]  == 1 %>
          <% bg_style = 'rgba(163,171,160, 1)' %>
          <% @phone_style = 'rgba(163,171,160, .9)' %>
        <% elsif @hero_image[:index]  == 2 %>
          <% bg_style = 'rgba(72,89,107, 1)' %>
          <% @phone_style = 'rgba(72,89,107, .9)' %>
        <% elsif @hero_image[:index]  == 3 %>
          <% bg_style = 'rgba(128,129,123, 1)' %>
          <% @phone_style = 'rgba(128,129,123, .9)' %>
        <% else %>
          <% bg_style = 'rgba(149,153,165, 1)' %>
          <% @phone_style = 'rgba(149,153,165, .9)' %>
        <% end %>

          <style>
            #intro {
              background-image:url(<%= @hero_image[:image].url %>);
              background-position-y:50%;
              background-position-x:50%;
              background-repeat: no-repeat;
              background-color:<%= bg_style %>;
            }
          </style>

        <% end %>

        <%#= raw @page.content_for(:body) %>
      </div>
    </div>
  </div>
</div>


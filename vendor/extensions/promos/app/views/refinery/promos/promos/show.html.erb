<% content_for :body_content_title do %>
  <%= @promo.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @promo.title %>
    </p>
  </section>
  <section>
    <h1>Promo Image</h1>
    <p>
      <%= image_fu @promo.promo_image, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @promo.description %>
    </p>
  </section>
  <section>
    <h1>Promo Status</h1>
    <p>
      <%=raw @promo.promo_status %>
    </p>
  </section>
  <section>
    <h1>Promo Pdf</h1>
    <p>
      <% if @promo.promo_pdf.present? %>
        <%= link_to 'promo_pdf', @promo.promo_pdf.url %>
      <% else %>
        promo_pdf
      <% end %>
    </p>
  </section>
  <section>
    <h1>Start Date</h1>
    <p>
      <%=raw @promo.start_date %>
    </p>
  </section>
  <section>
    <h1>End Date</h1>
    <p>
      <%=raw @promo.end_date %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="promos">
      <% @promos.each do |promo| %>
        <li>
          <%= link_to promo.title, refinery.promos_promo_path(promo) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>

<% content_for :body_content_title do %>
  <%= @service.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @service.title %>
    </p>
  </section>
  <section>
    <h1>Service Image</h1>
    <p>
      <%= image_fu @service.service_image, nil %>
    </p>
  </section>
  <section>
    <h1>Service Excerpt</h1>
    <p>
      <%=raw @service.service_excerpt %>
    </p>
  </section>
  <section>
    <h1>Service Description</h1>
    <p>
      <%=raw @service.service_description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="services">
      <% @services.each do |service| %>
        <li>
          <%= link_to service.title, refinery.services_service_path(service) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
